<Window x:Class="MeetingScribe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Meeting Scribe" Height="520" Width="860">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,12">
      <Button x:Name="BtnStart" Width="120" Height="34" Margin="0,0,10,0" Click="BtnStart_Click">Start</Button>
      <Button x:Name="BtnStop" Width="120" Height="34" Click="BtnStop_Click" IsEnabled="False">Stop</Button>
      <TextBlock x:Name="Status" Margin="16,0,0,0" VerticalAlignment="Center"/>
    </StackPanel>

    <GroupBox Header="Transcript" Grid.Row="1" Margin="0,0,0,12">
      <TextBox x:Name="TranscriptBox" Height="140" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
    </GroupBox>

    <GroupBox Header="Summary" Grid.Row="2">
      <TextBox x:Name="SummaryBox" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
    </GroupBox>
  </Grid>
</Window>
